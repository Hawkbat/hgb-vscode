{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es6"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "plugins": [
            {
                "name": "typescript-tslint-plugin",
                "ignoreDefinitionFiles": true,
                "configFile": "./tslint.json"
            }
        ]
    },
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}