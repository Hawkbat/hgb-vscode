{
	"extends": "tslint:latest",
	"rules": {
		"quotemark": {
			"options": "single"
		},
		"semicolon": {
			"options": "never"
		},
		"trailing-comma": {
			"options": {
				"singleline": "never",
				"multiline": "never",
				"esSpecCompliant": false
			}
		},
		"prefer-template": {
			"severity": "warn"
		},
		"no-implicit-dependencies": {
			"options": "dev"
		},
		"array-type": {
			"options": "array"
		},
		"typedef": {
			"options": [
				"call-signature",
				"property-declaration",
				"parameter"
			]
		},
		"arrow-parens": {
			"options": "ban-single-arg-parens",
			"severity": "warn"
		},
		"no-non-null-assertion": {
			"severity": "off"
		},
		"object-literal-sort-keys": {
			"severity": "off"
		},
		"max-line-length": {
			"severity": "off"
		},
		"no-bitwise": {
			"severity": "off"
		},
		"no-submodule-imports": {
			"severity": "off"
		},
		"no-console": {
			"severity": "off"
		}
	}
}